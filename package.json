{
  "name": "verticals-next-generations-node-back",
  "version": "1.0.0",
  "description": "Backend moderno con Node.js, TypeScript, Express y TypeORM para el proyecto Verticals Next Generations",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch -r tsconfig-paths/register src/index.ts",
    "dev:debug": "tsx watch -r tsconfig-paths/register --inspect src/index.ts",
    "build": "tsc -p tsconfig.json",
    "build:clean": "rm -rf dist && pnpm build",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "lint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json,md}'",
    "prepare": "husky"
  },
  "keywords": [
    "node",
    "typescript",
    "express",
    "typeorm",
    "mysql",
    "api",
    "backend"
  ],
  "author": "rodri542",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alebat-Education/verticals-next-generations-node-back.git"
  },
  "bugs": {
    "url": "https://github.com/Alebat-Education/verticals-next-generations-node-back/issues"
  },
  "homepage": "https://github.com/Alebat-Education/verticals-next-generations-node-back#readme",
  "type": "module",
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "morgan": "^1.10.1",
    "mysql2": "^3.15.1",
    "pino": "^10.0.0",
    "pino-http": "^11.0.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2",
    "@types/pino-http": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
